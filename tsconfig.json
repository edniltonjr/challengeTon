{
  "compilerOptions": {
    "target": "es2018",                                 
    "module": "commonjs",                     
    "rootDir": "./",          
    "baseUrl": ".",                                  
    "outDir": "./dist",   
    "strict": true, 
    // "paths": {
    //     "@modules/*": ["modules/*"],
    //     "@config/*": ["config/*"],
    //     "@shared/*": ["shared/*"],
    //     "@errors/*": ["errors/*"],
    //     "@utils/*": ["utils/*"]
    // },                                   
    "esModuleInterop": true,                             
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                     
    "skipLibCheck": true,                                
    "forceConsistentCasingInFileNames": true,            
    "resolveJsonModule": true,
   
  }
}
